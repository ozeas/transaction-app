{
  "name": "transaction-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@styled-system/prop-types": "^5.1.5",
    "@styled-system/theme-get": "^5.1.2",
    "react": "16.13.1",
    "react-app-rewired": "^2.1.6",
    "react-dom": "16.13.1",
    "react-hook-form": "^6.11.3",
    "react-number-format": "^4.4.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "rebass": "^4.0.7",
    "recoil": "^0.1.2",
    "styled-components": "^5.2.1",
    "styled-system": "^5.1.5"
  },
  "scripts": {
    "dev": "react-app-rewired start",
    "build": "react-app-rewired build",
    "eject": "react-app-rewired eject",
    "lint": "eslint src --ext .js,.jsx",
    "server": "json-server ./server/db.json --middlewares ./server/status-middleware.js",
    "test": "react-app-rewired test --passWithNoTests --watchAll=false",
    "test:watch": "react-app-rewired test --passWithNoTests",
    "test:staged": "yarn test --findRelatedTests",
    "storybook": "start-storybook",
    "build-storybook": "build-storybook"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "engines": {
    "node": ">=12.16.3",
    "yarn": ">=1.22.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/node-logger": "^6.0.28",
    "@storybook/preset-create-react-app": "^3.1.5",
    "@storybook/react": "^6.0.28",
    "@testing-library/dom": "^7.26.5",
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.3.2",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "7.1.2",
    "customize-cra": "^1.0.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^5.1.0",
    "husky": "^4.3.0",
    "json-server": "0.16.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.0.0",
    "react-is": "^17.0.1",
    "react-recoil-hooks-testing-library": "^0.0.8",
    "react-test-renderer": "^17.0.1",
    "typescript": "^4.0.5"
  },
  "jest": {
    "moduleNameMapper": {
      "@components(.*)": "<rootDir>/src/presentation/components/$1",
      "@presentation/(.*)": "<rootDir>/src/presentation/$1",
      "@style-tokens": "<rootDir>/src/presentation/style-tokens",
      "@test/(.*)": "<rootDir>/src/presentation/test/$1",
      "@data/(.*)": "<rootDir>/src/data/$1",
      "@http/(.*)": "<rootDir>/src/http/$1",
      "@domain/(.*)": "<rootDir>/src/domain/$1",
      "@main/(.*)": "<rootDir>/src/main/$1"
    }
  }
}
